# Import Pillow:
from PIL import Image

# Load the original image:
img = Image.open("image1.jpg")

img2 = img.rotate(45, expand=True))
img2.save("img2.jpg")

img3 = img.rotate(90, expand=True)
img3.save("img3.jpg")

img4 = img.rotate(145, expand=True)
img4.save("img4.jpg")
